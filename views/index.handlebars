<!-- Search form -->
<form action="/products/search" method="POST" class="mb-3 form-inline active-cyan-4">
  <input id="search" name="search" class="form-control form-control-m mr-3 w-25" type="text" placeholder="Search"
    aria-label="Search">
  <button type="submit" class="btn btn-primary float-right">search</button>
</form>


<ul class="nav nav-pills">
  <li class="nav-item">
    <a class="nav-link {{#ifCond '' categoryId}}active{{/ifCond}}" href="/?categoryId=">全部</a>
  </li>
  {{#each categories}}
  <li class="nav-item">
    <a class="nav-link {{#ifCond this.id ../categoryId}}active{{/ifCond}}"
      href="/?categoryId={{this.id}}">{{this.name}}</a>
  </li>
  {{/each}}
</ul>
<br />



<div class="row">
  {{#each products}}
  <div class="col-md-4">
    <div class="card mb-4 shadow-sm">
      <img class="card-img-top" src="{{this.image}}" alt="Card image cap" width="286px" height="180px">
      <div class="card-body">
        <p class="card-text">
          <a href="//{{this.id}}">
            {{this.name}}
          </a>
        </p>
        <span class="badge badge-secondary">{{this.Category.name}}</span>
        <p class="card-text">{{this.description}}</p>


        <div class="d-flex justify-content-between align-items-center">
          <small class="text-muted">$ {{this.price}}</small>
          <div class="btn-group">
            <form action="/cart" method="POST">
              <input type="hidden" name="productId" value="{{this.id}}">
              <button type="submit" class="btn btn-sm btn-outline-secondary">Add to Cart</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  {{/each}}
</div>
<br />
<br />
<br />

<nav aria-label="Page navigation example">
  <ul class="pagination">
    <li class="page-item">
      <a class="page-link" href="/?page={{prev}}&categoryId={{categoryId}}" aria-label="Previous">
        <span aria-hidden="true">&laquo;</span>
      </a>
    </li>
    {{#each totalPage}}
    {{#ifCond this ../page}}
    <li class="page-item active"><a class="page-link" href="#">{{this}}</a></li>
    {{else}}
    <li class="page-item"><a class="page-link" href="/?page={{this}}&categoryId={{../categoryId}}">{{this}}</a></li>
    {{/ifCond}}
    {{/each}}
    <a class="page-link" href="/?page={{next}}&categoryId={{categoryId}}" aria-label="Next">
      <span aria-hidden="true">&raquo;</span>
    </a>
    </li>
  </ul>
</nav>